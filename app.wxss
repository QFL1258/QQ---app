/**app.wxss**/
page{
  background: #ddd;
}
/*通用标题样式*/
.headline{
  margin: 50rpx 0 30rpx 20rpx;
  font-size: 18px;
  font-weight: bold;
}
/*最新上架下的卡片样式通用*/
.wrap{
  width:710rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.title{
  font-size: 14px;
  font-weight: bold;
}
.ft{
  font-size: 12px;
  color: #666;
}

/*通用功能：截取过长字符串*/
.ell{
  overflow: hidden;/*超出范围隐藏*/
  white-space: nowrap;/*不允许换行*/
  text-overflow:ellipsis;/*超出部分添加...*/
}
/*通用字体样式*/
.ft_color{
  color: orange;
  font-size: 30px;
}
/*通用功能：灰色分隔快*/
.divider{
  height: 20rpx;
  background-color: #f1f1f1;
}
/*卡片*/
.card{
   background-color: #fff;
   border-bottom: 2rpx solid rgb(201, 195, 195);
   font-size: 14px;
   height: 100rpx;
}
/*通用功能：箭头*/
.arrow{
  display: flex;
  justify-content: space-between; /*两端对齐*/
  align-items: center; /*垂直居中*/
}
.arrow::after{
  content: "";
  width: 15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc; /*箭头边框*/
  border-right:3rpx solid #ccc; 
  transform: rotate(45deg); /*旋转45度*/
}