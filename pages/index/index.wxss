/**index.wxss**/
/*功能一：轮播图*/
.slider,.slider swiper,.slider image{
 width: 710rpx;
 height: 300rpx;
 border-radius: 10px;
 margin: 0 auto;
 overflow: hidden;
}
.slider image{
  box-shadow: 10px 10px 10px rgb(0,0,0,0.5);
}
/*最新上架*/
.wrap-list{
  width: 345rpx;
  height: 165rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  position: relative;
}
.wrap-item{
  width: 180rpx;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  line-height: 1.5;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.wrap-list image{
  width: 145rpx;
  height: 145rpx;
  position: absolute;
  right: 10rpx;
  top:10rpx;
}
/*本月热销*/
.wrap-big{
  width: 345rpx;
  height:220rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.wrap-big .mon-list{
  width: 345rpx;
  height: 165rpx;
  margin-bottom: 3rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx;
} 
.mon-list .mon-item{
  width: 180rpx;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  line-height: 1.5;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.mon-list image{
  width: 145rpx;
  height: 145rpx;
  position: absolute;
  right: 10rpx;
  top:10rpx;
}
.mon-sell{
  width: 345rpx;
  height: 125RPX;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx;
}
.mon-sell text{
  margin-left: 10rpx;
}
/*畅销总榜*/
.well{
  display: flex;
  flex-direction: column;
}
.well-big{
  display: flex; 
  justify-content: space-between;
  width:710rpx;
  height: 235rpx;
  margin: 0 auto;
  border: 1px sold #ddd;
  margin-bottom: 10rpx;
}
.well-image{
  width: 230rpx;
  height: 226rpx;
  border: 2px solid yellow;
}
.well-big image{
  width: 100%;
  height:100%;
}
.well-item{
  width:350rpx;
  height: 235rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.well-item .ft_1{  
  position: absolute;
  bottom: 0;
}
.well-ranking{
  width: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin-right: 20rpx;
}
/*查看更多*/
.more{
  display: flex;
  justify-content: center;
  width: 200rpx;
  margin: 0 auto;
  padding: 50rpx 0 0 20rpx;
  font-size: 12px;

}
/*底部*/
.footer{
  display: flex;
  justify-content: center;
  margin: 30rpx auto;
  font-size: 12px;
}
.footer text{
  padding: 10rpx;
}
.footet-image{
  display: flex;
  justify-content: center;
  font-size: 12px;
  color: #8a8a8a;
}
.footet-image image{
  width: 35rpx;
  height: 35rpx;
 
}
.footet-image text{
  padding-left: 15rpx;
}
